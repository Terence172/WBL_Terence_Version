            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    if (item.landlord == null && item.tenant == null)
                    {
                        <tr>
                            
                            <td class="table-plus">@Html.DisplayFor(modelItem => item.reminder_title)</td>
